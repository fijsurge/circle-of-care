rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }

    function isMember(circleId) {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/circles/$(circleId)/members/$(request.auth.uid));
    }

    function isCircleAdmin(circleId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/circles/$(circleId)).data.adminId == request.auth.uid;
    }

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /circles/{circleId} {
      allow read: if isMember(circleId);
      allow create: if isSignedIn();
      allow update, delete: if isCircleAdmin(circleId);

      match /members/{memberId} {
        allow read: if isMember(circleId);
        allow create: if isCircleAdmin(circleId) ||
          (isSignedIn() && request.auth.uid == memberId);
        allow update: if isCircleAdmin(circleId) ||
          (isSignedIn() && request.auth.uid == memberId);
        allow delete: if isCircleAdmin(circleId);
      }

      match /invitations/{inviteCode} {
        allow read: if isSignedIn();
        allow create: if isCircleAdmin(circleId);
        allow update: if isSignedIn();   // mark used on accept
        allow delete: if isCircleAdmin(circleId);
      }

      match /logs/{logId} {
        allow read: if isMember(circleId);
        allow create: if isMember(circleId) &&
          request.resource.data.authorId == request.auth.uid;
        allow delete: if isCircleAdmin(circleId) ||
          (isMember(circleId) && resource.data.authorId == request.auth.uid);
        allow update: if false;   // logs are immutable
      }
    }
  }
}
